@model IEnumerable<Routes.Models.Notice>

@{
    ViewBag.Title = "News";
}

<h2>News</h2>

<div>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                @Html.ActionLink(item.Title, "ShowNew", "Home", new
                {
                    @noticeId = item.NoticeId,
                    @category = item.Category.ToLower(),
                    @title = item.Title.ToLower()
                }, null);

                <em>
                    @Html.DisplayFor(modelIem => item.Category)
                </em>

                <b>
                    @Html.DisplayFor(modelItem => item.Date)
                </b>

            </li>
        }
    </ul>
</div>
